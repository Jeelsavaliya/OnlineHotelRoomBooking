@using Mango.Web.Models
@model RegistrationRequestDto

@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}


<form method="post" >
    <label for="first">Email:</label>
    <input type="email" name="Email" placeholder="Enter your Email" required>

    <label for="first">Name:</label>
    <input type="text" name="Name" placeholder="Enter your Name" required>

    <label for="first">PhoneNumber:</label>
    <input type="number" name="PhoneNumber" placeholder="Enter your PhoneNumber" required>


    <label for="password">Password:</label>
    <input type="password" id="password" name="password" placeholder="Enter your Password" required>

    @* <Select for="first" asp-items="@ViewBag.RoleList">
        Role:<option disabled selected>--Select Role--</option> 
    </Select> *@


    <div class="wrap" >
        <button type="submit" onclick="solve()" asp-controller="Auth" asp-action="Register">Register</button>
    </div>
</form>
<p>
    <a asp-controller="Auth" asp-action="Login"
       style="text-decoration: none;">
        Back to Login
    </a>
</p>

